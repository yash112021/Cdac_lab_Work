package com.demo.MVC_CURD_SPRINGBoot.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.demo.MVC_CURD_SPRINGBoot.beans.Product;
import com.demo.MVC_CURD_SPRINGBoot.service.ProductService;


@Controller
@RequestMapping("/")
public class ProductController {
	

	@GetMapping("/welcome")
	public ModelAndView sayWelcome() {
		String msg1 ="Hello Welcome to our MVC of the Spring Boot Project";
		return new ModelAndView("welcome","mmssgg",msg1);
	}
	
	@Autowired
	ProductService pserv;
	
	@GetMapping("/showproduct")
	public ModelAndView showProduct() {
		// making an list to written to user 
		List<Product>plist=pserv.addnewProject();
		return new ModelAndView("productshw","lst",plist);
	}
	
	// workingone here
	@GetMapping("/productshw")
	public ModelAndView prdshow() {
		// making an list to written to user 
		List<Product>plist=pserv.addnewProject();
		return new ModelAndView("showproduct","lst",plist);
	}
	
	
	@GetMapping("/addproduct")
	public String insertproduct(Model m) {
		m.addAttribute("product",new Product());
		return "insertProduct";
	}
	
	// now we are going to use the get mapping (// adding new product ) 
	@PostMapping("/insertprd")
	public ModelAndView insertintoprod(@ModelAttribute Product product) {
		pserv.addprd(product);
		return new ModelAndView("redirect:/productshw");
	}
	
	// deleting the item
	@DeleteMapping("/deleteproduct/{pid}")
	public ModelAndView deleteItem(@PathVariable("pid")  int id) {
		pserv.deletebyId(pid);
		return new ModelAndView();
	}
	
	
	
	
}
