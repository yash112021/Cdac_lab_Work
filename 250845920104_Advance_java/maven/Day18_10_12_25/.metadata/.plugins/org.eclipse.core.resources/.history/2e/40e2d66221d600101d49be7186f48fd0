package com.demo.JWTTokens.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.demo.JWTTokens.beans.Product;
import com.demo.JWTTokens.service.ProductService;

@RestController
public class ProductController {
	
	//making the object of service
	@Autowired
	ProductService pservice;
	
	
	// now in the rest controller we are using the ResponseEntity which will contain the status and the data
	@GetMapping("/showproduct")
	public ResponseEntity<List<Product>> showAllProduct(){
		List<Product> plist = pservice.getAllProduct();
		return ResponseEntity.ok(plist)
	}
	
	
}
